{
  "npmClient": "yarn",
  "version": "independent",
  "command": {
    "publish": {
      "registry": "http://registry.npmjs.org/",
      "npmClient": "npm",
      "ignoreChanges": ["*.md", "*.mdx", "*.story.tsx", "*.stories.tsx"],
      "message": "Lerna versionbump [ci skip]"
    },
    "bootstrap": {
      "ignore": "*"
    }
  },
  "packages": [
    "packages/*",
    "@navikt/ds-css",
    "@navikt/ds-react/core",
    "@navikt/ds-react/internal",
    "@navikt/ds-react/navno",
    "@navikt/ds-icons",
    "@navikt/ds-tokens"
  ]
}
