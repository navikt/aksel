{
  "compilerOptions": {
    "module": "esnext",
    "moduleResolution": "bundler",
    "sourceMap": false,
    "esModuleInterop": true,
    "target": "es2020",
    "preserveWatchOutput": true,
    "declaration": false,
    "types": ["node"],
    "outDir": "dist",
    "rootDir": "./src",
    "resolveJsonModule": true,
    "allowJs": true,
    "skipLibCheck": true
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules", "dist", "**/tests/**"]
}
