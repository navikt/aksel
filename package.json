{
  "name": "nav-ds",
  "description": "Repository for NAV Designsystem",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "start": "yarn workspace website start",
    "boot": "yarn clean:lib && yarn lerna:build",
    "clean": "yarn workspace website clean",
    "build:gatsby": "yarn workspace website build:gatsby",
    "serve": "yarn workspace website serve",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook",
    "chromatic": "npx chromatic --project-token x3xqdfgkujg",
    "lerna:watch": "yarn run lerna run watch --parallel",
    "lerna:build": "yarn run lerna run build",
    "lerna:token": "yarn run lerna run token",
    "lint": "yarn lint:jsts && yarn lint:less",
    "lint:jsts": "npx eslint .",
    "lint:less": "npx stylelint --syntax less **/*.less",
    "clean:lib": "node utilities/scripts/clean.js",
    "fix:versions": "node utilities/scripts/fixDependencyVersions.js"
  },
  "workspaces": [
    "website",
    "packages/*",
    "@nav-frontend/*",
    "./utilities/build/props-resolver"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged",
      "pre-push": "yarn lint"
    }
  },
  "prettier": {},
  "eslintConfig": {
    "extends": [
      "react-app"
    ],
    "ignorePatterns": [
      "node_modules",
      "lib",
      "public"
    ]
  },
  "stylelint": {
    "extends": "stylelint-config-standard",
    "rules": {
      "value-list-comma-newline-after": null,
      "declaration-colon-newline-after": null,
      "no-descending-specificity": null
    },
    "ignoreFiles": [
      "packages/nav-frontend-core/less/vendor/_normalize.less",
      "packages/nav-frontend-core/less/_variabler-exports.less",
      "packages/nav-frontend-core/less/hide-text.less",
      "@nav-frontend/tokens/dist/tokens.less"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/navikt/nav-frontend-moduler.git"
  },
  "dependencies": {
    "@popperjs/core": "^2.5.4",
    "babel-plugin-react-docgen": "^1.8.1",
    "chalk": "^1.1.3",
    "cypress": "^5.3.0",
    "depth-first": "^4.0.0",
    "gatsby-transformer-react-docgen-typescript-custom": "0.1.0",
    "gh-pages": "^3.1.0",
    "gulp": "^4.0.2",
    "gulp-cssfont64-formatter": "0.0.2",
    "gulp-newer": "^1.3.0",
    "gulp-plumber": "^1.1.0",
    "gulp-util": "^3.0.8",
    "husky": "^4.3.0",
    "lerna": "^3.22.1",
    "less-vars-to-js": "^1.3.0",
    "lodash.camelcase": "^4.3.0",
    "pretty-quick": "^3.1.0",
    "react-docgen": "^5.3.0",
    "react-docgen-exports-handler": "^1.0.0",
    "react-merge-refs": "^1.1.0",
    "react-popper": "^2.2.4",
    "react-svg-icon-generator-fork": "^1.0.2",
    "start-server-and-test": "^1.11.4",
    "style-loader": "^1.2.1",
    "through2": "^2.0.3",
    "vinyl": "^2.2.1"
  },
  "devDependencies": {
    "@babel/core": "^7.11.6",
    "@storybook/addon-actions": "^6.0.22",
    "@storybook/addon-essentials": "^6.0.22",
    "@storybook/addon-links": "^6.0.22",
    "@storybook/react": "^6.0.22",
    "@typescript-eslint/eslint-plugin": "^4.3.0",
    "@typescript-eslint/parser": "^4.3.0",
    "babel-eslint": "^10.1.0",
    "babel-loader": "^8.1.0",
    "chromatic": "^5.2.0",
    "eslint": "^7.10.0",
    "eslint-config-react-app": "^5.2.1",
    "eslint-plugin-flowtype": "^5.2.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.0.2",
    "eslint-plugin-jsx-a11y": "^6.3.1",
    "eslint-plugin-react": "^7.21.2",
    "eslint-plugin-react-hooks": "^4.1.2",
    "gatsby-transformer-react-docgen-typescript-custom": "0.1.0",
    "lerna-changelog": "^1.0.1",
    "prettier": "2.1.2",
    "prop-types": "^15.5.10",
    "react-is": "^16.13.1",
    "stylelint": "^13.7.2",
    "stylelint-config-standard": "^20.0.0",
    "typescript": "^3.7.3",
    "css-loader": "^5.0.1",
    "less": "^3.0.0",
    "less-loader": "^7.0.2",
    "mini-css-extract-plugin": "^1.3.0",
    "webpack": "^5.4.0",
    "webpack-cli": "^4.2.0"
  }
}
