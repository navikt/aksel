{
  "compilerOptions": {
    "module": "commonjs",
    "target": "esnext",
    "moduleResolution": "node",
    "allowJs": false,
    "declaration": true,
    "noImplicitAny": false,
    "strictNullChecks": true,
    "removeComments": false,
    "preserveConstEnums": true,
    "sourceMap": true,
    "jsx": "react",
    "lib": [
      "DOM",
      "es2015",
      "es2016",
      "es2017"
    ]
  },
  "include": [
    "packages/node_modules/**/src/*"
  ],
  "exclude": [
    "node_modules",
    "**/*-spec.js",
    "**/*-test.js",
    "**/*.less",
    "documentation"
  ]
}