{
  "name": "nav-ds",
  "description": "Repository for NAV Designsystem",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "test": "yarn workspace @navikt/ds-react test && yarn workspace @navikt/ds-tokens test",
    "postinstall": "husky install",
    "boot": "yarn clean:lib && yarn build:packages --stream",
    "storybook": "yarn run start-storybook --loglevel warn --quiet -p 6006",
    "build:packages": "yarn run --silent lerna run build",
    "build:storybook": "build-storybook",
    "chromatic": "npx chromatic --project-token x3xqdfgkujg",
    "lerna:watch": "yarn run lerna run watch --stream",
    "update:icons": "yarn workspace @navikt/ds-icons update",
    "update:tokens": "yarn workspace @navikt/ds-tokens update",
    "lint": "yarn lint:jsts && yarn lint:css",
    "lint:jsts": "yarn eslint .",
    "lint:css": "yarn stylelint --syntax css @navikt/**/*.css",
    "clean:lib": "node utilities/scripts/clean.js"
  },
  "workspaces": [
    "@navikt/core/*",
    "@navikt/internal/*"
  ],
  "prettier": {},
  "eslintConfig": {
    "extends": [
      "react-app"
    ],
    "ignorePatterns": [
      "node_modules",
      "lib",
      "public",
      "examples",
      "esm",
      "cjs"
    ]
  },
  "stylelint": {
    "extends": [
      "stylelint-config-standard",
      "stylelint-config-prettier"
    ],
    "rules": {
      "value-list-comma-newline-after": null,
      "declaration-colon-newline-after": null,
      "no-descending-specificity": null
    },
    "ignoreFiles": [
      "packages/nav-frontend-core/less/vendor/_normalize.less",
      "packages/nav-frontend-core/less/_variabler-exports.less",
      "packages/nav-frontend-core/less/hide-text.less",
      "**/dist/**"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/navikt/nav-frontend-moduler.git"
  },
  "dependencies": {
    "@popperjs/core": "^2.5.4",
    "@storybook/addon-storysource": "^6.3.4",
    "@storybook/addons": "^6.3.4",
    "@storybook/theming": "^6.3.4",
    "@storybook/addon-a11y": "^6.3.12",
    "axios": "^0.21.3",
    "chalk": "^2.0.0",
    "color": "^3.1.3",
    "copyfiles": "^2.4.0",
    "depth-first": "^4.0.0",
    "extend": "^3.0.2",
    "gh-pages": "^3.1.0",
    "glob": "^7.1.6",
    "fast-glob": "^3.2.7",
    "fs-extra": "^10.0.0",
    "gulp": "^4.0.2",
    "gulp-cssfont64-formatter": "0.0.2",
    "gulp-newer": "^1.3.0",
    "gulp-plumber": "^1.1.0",
    "gulp-util": "^3.0.8",
    "husky": "^5.0.0",
    "inquirer": "^7.3.3",
    "jszip": "^3.7.0",
    "lerna": "^4.0.0",
    "less-vars-to-js": "^1.3.0",
    "lodash.camelcase": "^4.3.0",
    "mustache": "^4.0.1",
    "p-limit": "^3.1.0",
    "pretty-quick": "^3.1.0",
    "react-merge-refs": "^1.1.0",
    "react-popper": "^2.2.4",
    "react-router-dom": "^5.2.0",
    "react-svg-icon-generator-fork": "^1.0.2",
    "style-loader": "^1.2.1",
    "through2": "^2.0.3",
    "vinyl": "^2.2.1",
    "yarn": "^1.22.10"
  },
  "devDependencies": {
    "@babel/core": "^7.11.6",
    "@storybook/addon-actions": "^6.3.4",
    "@storybook/addon-docs": "^6.3.4",
    "@storybook/addon-essentials": "^6.3.4",
    "@storybook/react": "^6.3.4",
    "@typescript-eslint/eslint-plugin": "^4.3.0",
    "@typescript-eslint/parser": "^4.3.0",
    "babel-eslint": "^10.1.0",
    "babel-loader": "^8.1.0",
    "chromatic": "^5.2.0",
    "css-loader": "^5.0.1",
    "eslint": "^7.10.0",
    "eslint-plugin-flowtype": "^5.2.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.0.2",
    "eslint-plugin-jsx-a11y": "^6.3.1",
    "eslint-plugin-react": "^7.21.2",
    "eslint-plugin-react-hooks": "^4.1.2",
    "prettier": "2.2.1",
    "prop-types": "^15.5.10",
    "react": "^17.0.0",
    "stylelint": "^13.13.1",
    "stylelint-config-standard": "^22.0.0",
    "stylelint-config-prettier": "^8.0.2",
    "typescript": "^4.3.5",
    "webpack": "^5.4.0",
    "webpack-cli": "^4.2.0"
  }
}
