{
  "name": "@navikt/aksel-stylelint",
  "version": "3.0.0",
  "author": "Aksel | NAV",
  "homepage": "https://aksel.nav.no/lint",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/navikt/aksel.git",
    "directory": "@navikt/aksel-icons"
  },
  "keywords": [
    "aksel",
    "stylelint"
  ],
  "publishConfig": {
    "access": "public",
    "provenance": true
  },
  "license": "MIT",
  "main": "./index.js",
  "exports": "./dist/index.js",
  "files": [
    "./dist"
  ],
  "scripts": {
    "test": "jest",
    "copy": "copyfiles -E -f ../core/css/dist/index.css -f ../core/css/tokens.json dist",
    "build": "tsc -p . && yarn copy",
    "watch:lint": "tsc --watch -p .",
    "dev": "yarn watch:lint"
  },
  "devDependencies": {
    "@types/jest": "^29.0.0",
    "copyfiles": "2.4.1",
    "jest": "^29.0.0",
    "jest-preset-stylelint": "^6.1.0",
    "stylelint": "^14.8.5",
    "typescript": "^4.8.0"
  },
  "jest": {
    "preset": "jest-preset-stylelint",
    "testMatch": [
      "**/*.test.ts"
    ],
    "transform": {
      "^.+\\.ts?$": "ts-jest"
    }
  }
}
