{
  "npmClient": "yarn",
  "version": "independent",
  "command": {
    "publish": {
      "registry": "http://registry.npmjs.org/",
      "npmClient": "npm",
      "ignoreChanges": ["*.md", "*.mdx", "*.story.tsx", "*.stories.tsx"],
      "message": "Lerna versionbump [ci skip]"
    },
    "bootstrap": {
      "ignore": "*"
    }
  },
  "packages": [
    "packages/*",
    "@navikt/core/css",
    "@navikt/core/react",
    "@navikt/core/icons",
    "@navikt/core/tokens",
    "@navikt/internal/css",
    "@navikt/internal/react"
  ]
}
