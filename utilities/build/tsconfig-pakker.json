{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES6",
    "allowJs": false,
    "jsx": "react",
    "noEmit": false,
    "strictNullChecks": true,
    "sourceMap": false,
    "preserveConstEnums": true,
    "removeComments": false,
    "noImplicitAny": false,
    "declaration": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "lib": ["DOM", "es2015", "es2016", "es2017"]
  },
  "exclude": ["node_modules"]
}
