{
  "name": "nav-ds",
  "description": "Repository for NAV Designsystem",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "test": "lerna run test",
    "postinstall": "husky install",
    "boot": "yarn clean:lib && yarn build:packages --stream",
    "storybook": "start-storybook -p 6006",
    "build:packages": "yarn build:tokens && yarn run --silent lerna run build",
    "build:storybook": "build-storybook",
    "build:tokens": "yarn workspace @navikt/ds-tokens build",
    "chromatic": "npx chromatic --project-token x3xqdfgkujg",
    "lerna:watch": "yarn run lerna run watch --stream",
    "update:icons": "yarn workspace @navikt/ds-icons update",
    "update:tokens": "yarn workspace @navikt/ds-tokens update",
    "lint": "yarn lint:jsts && yarn lint:css",
    "lint:jsts": "yarn eslint .",
    "lint:css": "yarn stylelint --syntax css @navikt/**/*.css",
    "clean:lib": "node utilities/scripts/clean.js"
  },
  "workspaces": [
    "@navikt/core/*",
    "@navikt/internal/*"
  ],
  "prettier": {},
  "eslintConfig": {
    "extends": [
      "react-app"
    ],
    "ignorePatterns": [
      "node_modules",
      "lib",
      "public",
      "examples",
      "esm",
      "cjs"
    ]
  },
  "stylelint": {
    "extends": [
      "stylelint-config-standard",
      "stylelint-config-prettier"
    ],
    "rules": {
      "value-list-comma-newline-after": null,
      "declaration-colon-newline-after": null,
      "no-descending-specificity": null
    },
    "ignoreFiles": [
      "**/dist/**"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/navikt/nav-frontend-moduler.git"
  },
  "dependencies": {
    "extend": "^3.0.2",
    "gh-pages": "^3.1.0",
    "glob": "^7.1.6",
    "fast-glob": "^3.2.7",
    "fs-extra": "^10.0.0",
    "husky": "^5.0.0",
    "lerna": "^4.0.0",
    "pretty-quick": "^3.1.0",
    "style-loader": "^1.2.1",
    "yarn": "^1.22.10"
  },
  "devDependencies": {
    "@storybook/addon-storysource": "^6.4",
    "@storybook/addons": "^6.4",
    "@storybook/theming": "^6.4",
    "@storybook/addon-a11y": "^6.4",
    "@storybook/builder-webpack5": "^6.4",
    "@storybook/manager-webpack5": "^6.4",
    "@storybook/addon-actions": "^6.4",
    "@storybook/addon-docs": "^6.4",
    "@storybook/addon-essentials": "^6.4",
    "@storybook/react": "^6.4",
    "@babel/core": "^7.11.6",
    "@typescript-eslint/eslint-plugin": "^4.3.0",
    "@typescript-eslint/parser": "^4.3.0",
    "babel-eslint": "^10.1.0",
    "babel-loader": "^8.1.0",
    "chromatic": "^5.2.0",
    "css-loader": "^5.0.1",
    "eslint": "^7.10.0",
    "eslint-config-react-app": "^5.2.1",
    "eslint-plugin-flowtype": "^5.2.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.0.2",
    "eslint-plugin-jsx-a11y": "^6.3.1",
    "eslint-plugin-react": "^7.21.2",
    "eslint-plugin-react-hooks": "^4.1.2",
    "prettier": "2.2.1",
    "prop-types": "^15.5.10",
    "react": "^17.0.0",
    "stylelint": "^13.13.1",
    "stylelint-config-standard": "^22.0.0",
    "stylelint-config-prettier": "^8.0.2",
    "typescript": "^4.3.5",
    "webpack": "^5.4.0",
    "webpack-cli": "^4.2.0",
    "react-dom": "^17.0.2"
  }
}
