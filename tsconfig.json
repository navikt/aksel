{
  "compilerOptions": {
    "jsx": "react",
    "strict": true,
    "esModuleInterop": true,
    "target": "es6",
    "moduleResolution": "node",
    "incremental": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "exclude": [
    "**/stories",
    "**/*.stories.*",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.e2e.ts"
  ]
}
