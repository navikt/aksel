{
  "name": "aksel",
  "description": "NAV designystem + Aksel.nav.no",
  "version": "1.1.0",
  "private": true,
  "scripts": {
    "postinstall": "husky install",
    "boot": "yarn workspaces foreach -v -pA --topological-dev --no-private run build",
    "clean": "node scripts/clean.js && yarn workspace @navikt/ds-codemod clean",
    "storybook": "storybook dev -p 6006",
    "storybook:aksel": "concurrently \"yarn watch:tw\" \"cross-env STORYBOOK_STORIES=all storybook dev -p 6006\"",
    "dev": "yarn workspace aksel.nav.no dev",
    "docgen": "yarn workspaces foreach -p run docgen",
    "chromatic": "npx chromatic --project-token x3xqdfgkujg --build-script-name build:storybook",
    "build:storybook": "storybook build",
    "test": "yarn workspaces foreach -p run test",
    "lint": "yarn eslint . && yarn stylelint @navikt/**/*.css",
    "changeset": "changeset",
    "version": "changeset version",
    "release": "yarn boot && yarn docgen && changeset publish"
  },
  "workspaces": [
    "@navikt/core/*",
    "@navikt/internal/*",
    "@navikt/codemod",
    "@navikt/icons",
    "@navikt/aksel-icons",
    "@navikt/community/*",
    "examples/*",
    "aksel.nav.no"
  ],
  "prettier": {
    "overrides": [
      {
        "files": "**/*.css",
        "options": {
          "printWidth": 130
        }
      }
    ]
  },
  "lint-staged": {
    "*.js": "eslint",
    "*.jsx": "eslint",
    "*.ts": "eslint",
    "*.tsx": "eslint",
    "*.css": "stylelint"
  },
  "eslintConfig": {
    "plugins": [
      "jest"
    ],
    "extends": [
      "react-app",
      "eslint:recommended",
      "plugin:react-hooks/recommended"
    ],
    "rules": {
      "react/no-unknown-property": [
        2,
        {
          "ignore": [
            "jsx",
            "global"
          ]
        }
      ],
      "react/jsx-pascal-case": 0,
      "import/no-anonymous-default-export": [
        "error",
        {
          "allowObject": true
        }
      ],
      "react/jsx-curly-brace-presence": [
        "error",
        {
          "props": "never"
        }
      ]
    },
    "overrides": [
      {
        "env": {
          "browser": true,
          "es2021": true
        },
        "extends": [
          "plugin:@next/next/recommended",
          "plugin:@typescript-eslint/recommended"
        ],
        "parser": "@typescript-eslint/parser",
        "parserOptions": {
          "ecmaFeatures": {
            "jsx": true
          },
          "ecmaVersion": 12,
          "sourceType": "module"
        },
        "settings": {
          "react": {
            "version": "detect"
          }
        },
        "files": [
          "aksel.nav.no/website/**"
        ],
        "rules": {
          "@typescript-eslint/ban-ts-comment": "off",
          "import/no-anonymous-default-export": "off",
          "jsx-a11y/anchor-is-valid": "off",
          "react/react-in-jsx-scope": "off",
          "@typescript-eslint/no-explicit-any": "off",
          "react/display-name": "off",
          "@typescript-eslint/explicit-function-return-type": "off",
          "@typescript-eslint/explicit-module-boundary-types": "off",
          "@next/next/no-html-link-for-pages": [
            "error",
            "aksel.nav.no/website/pages/"
          ]
        }
      }
    ],
    "globals": {
      "Locale": "readonly",
      "JSX": "readonly"
    },
    "ignorePatterns": [
      "node_modules",
      "lib",
      "public",
      "examples",
      "esm",
      "cjs",
      "**/codemod/**/*.js"
    ]
  },
  "stylelint": {
    "extends": [
      "stylelint-config-standard",
      "stylelint-config-prettier"
    ],
    "plugins": [
      "stylelint-value-no-unknown-custom-properties",
      "stylelint-declaration-block-no-ignored-properties"
    ],
    "rules": {
      "plugin/declaration-block-no-ignored-properties": true,
      "value-list-comma-newline-after": null,
      "declaration-colon-newline-after": null,
      "no-descending-specificity": null,
      "selector-class-pattern": null,
      "custom-property-pattern": null,
      "keyframes-name-pattern": null,
      "function-url-quotes": null,
      "property-no-vendor-prefix": null,
      "alpha-value-notation": "number",
      "declaration-property-value-disallowed-list": {
        "justify-content": [
          "start",
          "end"
        ],
        "align-items": [
          "start",
          "end"
        ]
      },
      "value-keyword-case": [
        "lower",
        {
          "camelCaseSvgKeywords": true
        }
      ],
      "csstools/value-no-unknown-custom-properties": [
        true,
        {
          "importFrom": [
            "@navikt/core/tokens/dist/tokens.css"
          ]
        }
      ]
    },
    "ignoreFiles": [
      "**/dist/**",
      "**/@navikt/codemod/**"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/navikt/aksel.git"
  },
  "devDependencies": {
    "@changesets/changelog-github": "0.4.7",
    "@changesets/cli": "2.25.0",
    "@storybook/addon-a11y": "7.0.0-rc.5",
    "@storybook/addon-actions": "7.0.0-rc.5",
    "@storybook/addon-essentials": "7.0.0-rc.5",
    "@storybook/addon-storysource": "7.0.0-rc.5",
    "@storybook/addons": "7.0.0-rc.5",
    "@storybook/csf-tools": "7.0.0-rc.5",
    "@storybook/react": "7.0.0-rc.5",
    "@storybook/react-vite": "7.0.0-rc.5",
    "@storybook/theming": "7.0.0-rc.5",
    "@typescript-eslint/parser": "^5.41.0",
    "@whitespace/storybook-addon-html": "^5.0.3",
    "chromatic": "6.5.4",
    "concurrently": "7.2.1",
    "cross-env": "^7.0.0",
    "eslint": "^8.16.0",
    "eslint-config-react-app": "^7.0.1",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^26.2.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "fast-glob": "3.2.11",
    "fs-extra": "^10.0.1",
    "glob": "^7.1.6",
    "husky": "^8.0.0",
    "lint-staged": "13.0.3",
    "prettier": "2.7.1",
    "pretty-quick": "^3.1.3",
    "react": "^18.0.0",
    "react-docgen-typescript": "2.2.2",
    "react-dom": "^18.0.0",
    "storybook": "7.0.0-rc.5",
    "storybook-addon-next-router": "^4.0.2",
    "stylelint": "^14.8.5",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-standard": "^25.0.0",
    "stylelint-declaration-block-no-ignored-properties": "^2.6.0",
    "stylelint-value-no-unknown-custom-properties": "^4.0.0",
    "typescript": "^4.8.0",
    "vite": "4.1.1",
    "yarn": "^1.22.10"
  },
  "packageManager": "yarn@3.2.1"
}
