{
  "extends": "../../../tsconfig.build.json",
  "compilerOptions": {
    "outDir": "./cjs",
    "moduleResolution": "node",
    "module": "commonjs",
    "noImplicitAny": false,
    "declaration": true,
    "sourceMap": true,
    "paths": {
      "@/className": ["./src/util/className.ts"]
    }
  },
  "include": ["./src"],
  "exclude": [
    "./src/**/*.test.ts",
    "./src/**/*.test.tsx",
    "./src/**/*.test-d.ts",
    "./src/**/*.stories.tsx",
    "./src/**/renderStoriesForChromatic.tsx"
  ]
}
