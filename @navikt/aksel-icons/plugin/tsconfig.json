{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": false,
    "noEmit": true,
    "jsx": "react-jsx",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "rootDir": ".",
    "baseUrl": ".",
    "outDir": "dist/",
    "sourceMap": false,
    "noImplicitAny": false
  },
  "include": [
    "src/**/*.d.ts",
    "src/**/*.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.js",
    "src/**/*.jsx"
  ],
  "exclude": ["src/common/**/*"]
}
